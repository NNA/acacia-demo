<%= form_for @project do |f| %>
	
	<%= render "shared/error_messages", target: @project %>
	
	<div class="form-group">
		<%= f.label :name, "Nom" %>:
	  	<%= f.text_field :name, class: "form-control" %>
	</div>

	<div class="form-group">
	  	<%= f.label :description, "Description" %>:
	  	<%= f.text_area :description, class: "form-control" %>
  	</div>

  	<div class="form-group">
	  	<%= f.label :place, "Lieu" %>:
	  	<%= f.text_area :place, class: "form-control" %>
  	</div>

  	<div class="form-group">
	  	<%= f.label :category, 'Categorie' %>:
	  	<%= f.text_area :category, class: "form-control" %>
	</div>

	<div class="form-group">
	  	<%= f.label :amount, "Montant" %>:
	  	<%= f.text_area :amount, class: "form-control" %>
  	</div>

	<%= f.submit "Valider", class: "btn btn-success" %> <%= link_to 'Annuler', projects_path %>
<% end %>