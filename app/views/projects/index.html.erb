<div class="container">
	<%= link_to new_project_path, class: 'btn btn-success' do %>
	    <i class="glyphicon glyphicon-plus icon-white"></i> Ajouter votre projet
	<% end %>
	<%= render "shared/alert_and_notice" %>
	<table class="table table-striped">
	    	<thead>
	    		<tr>
	    			<td>Nom:</td>
	    			<td>Descriptif:</td>
	    			<td>Lieu:</td>
	    			<td>Categorie:</td>
	    			<td>Montant:</td>
	    			<td>&nbsp;</td>
	    		</tr>
	    	</thead>
	    <% @projects.each do |project| %>
	    	<tbody>
	    		<tr class='clickable-row' data-url="<%= project_path(project) %>">
	    			<td><%= project.name %></td>
	    			<td><%= project.description %></td>
	    			<td><%= project.location %></td>
	    			<td><%= project.category.name %></td>
	    			<td><%= project.amount %></td>
					<td>
	    				<%= link_to project_path(project), class: "btn btn-default btn-xs" do %>
							<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>&nbsp;Voir
						<% end %>
						<%= link_to edit_project_path(project), class: "btn btn-default btn-xs" do %>
							<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>&nbsp;Editer
						<% end %>
					</td>
	    		</tr>
	    	</tbody>
	    <% end %>
	</table>
	
</div>